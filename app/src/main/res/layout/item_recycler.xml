<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRecycler"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/default_size_125_dp"
        android:layout_height="@dimen/default_size_175_dp"
        android:layout_marginStart="@dimen/default_size_16_dp"
        android:layout_marginTop="@dimen/default_text_10_sp"
        android:elevation="@dimen/default_size_10_dp"
        app:cardCornerRadius="@dimen/default_size_8_dp">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:src="@drawable/capitamarvel" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_size_8_dp"
        android:layout_marginTop="@dimen/default_size_5_dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="CapitÃ£ Marvel" />

    <TextView
        android:id="@+id/movieDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_size_8_dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_10_sp"
        tools:text="Dec 16, 2020" />

</LinearLayout>