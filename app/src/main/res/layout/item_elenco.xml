<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRecycler"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/default_size_100_dp"
        android:layout_height="@dimen/default_size_100_dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/default_size_8_dp"
        android:layout_marginEnd="@dimen/default_size_8_dp"
        android:elevation="10dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/roundedImageViewActor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:src="@drawable/capitamarvel" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textActorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        tools:text="Gal Gadot" />

    <TextView
        android:id="@+id/textActorRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        tools:text="Wonder Women" />


</LinearLayout>